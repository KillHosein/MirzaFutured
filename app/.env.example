# Mirza Web App - Configuration

# Application Settings
APP_NAME="Mirza Web App"
APP_URL="https://your-domain.com"
ENVIRONMENT="development"  # development, staging, production

# Database Configuration
DB_HOST="localhost"
DB_NAME="mirza_db"
DB_USER="root"
DB_PASS=""
DB_CHARSET="utf8mb4"

# Telegram Bot Configuration
BOT_TOKEN="YOUR_BOT_TOKEN_HERE"
WEBHOOK_URL="https://your-domain.com/webhook.php"

# Security Settings
SECRET_KEY="your-secret-key-here-change-this"
JWT_SECRET="your-jwt-secret-here-change-this"
ENCRYPTION_KEY="your-encryption-key-here-change-this"

# File Upload Settings
MAX_FILE_SIZE="10485760"  # 10MB in bytes
ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# Cache Settings
CACHE_ENABLED="true"
CACHE_DURATION="3600"  # 1 hour in seconds

# Rate Limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_MAX_ATTEMPTS="5"
RATE_LIMIT_TIME_WINDOW="3600"  # 1 hour in seconds

# Session Settings
SESSION_LIFETIME="7200"  # 2 hours in seconds
SESSION_SECURE="true"
SESSION_HTTP_ONLY="true"

# Email Settings (Optional)
MAIL_DRIVER="smtp"
MAIL_HOST="smtp.gmail.com"
MAIL_PORT="587"
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_ENCRYPTION="tls"
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_LEVEL="debug"  # debug, info, warning, error
LOG_CHANNEL="file"  # file, database, email

# Maintenance Mode
MAINTENANCE_MODE="false"
MAINTENANCE_MESSAGE="سایت در حال به‌روزرسانی است. لطفاً بعداً مراجعه کنید."

# API Settings
API_RATE_LIMIT="60"  # requests per minute
API_VERSION="v1"

# Backup Settings
BACKUP_ENABLED="true"
BACKUP_FREQUENCY="daily"  # daily, weekly, monthly
BACKUP_RETENTION_DAYS="30"

# Security Headers
SECURITY_HEADERS_ENABLED="true"
CORS_ALLOWED_ORIGINS="*"
CORS_ALLOWED_METHODS="GET,POST,PUT,DELETE,OPTIONS"
CORS_ALLOWED_HEADERS="Content-Type,Authorization,X-Requested-With"

# Telegram Web App Settings
WEB_APP_VERSION="1.0.0"
WEB_APP_MIN_VERSION="1.0.0"
WEB_APP_MAX_VERSION="1.0.0"

# Feature Flags
FEATURE_USER_PROFILES="true"
FEATURE_USER_SETTINGS="true"
FEATURE_NOTIFICATIONS="true"
FEATURE_DATA_EXPORT="true"
FEATURE_ACTIVITY_LOG="true"
FEATURE_RATE_LIMITING="true"
FEATURE_MAINTENANCE_MODE="true"
FEATURE_TELEMETRY="true"

# Performance Settings
COMPRESSION_ENABLED="true"
MINIFICATION_ENABLED="true"
CDN_ENABLED="false"
CDN_URL=""

# Analytics (Optional)
ANALYTICS_ENABLED="false"
GOOGLE_ANALYTICS_ID=""
MIXPANEL_TOKEN=""

# Error Reporting (Optional)
ERROR_REPORTING_ENABLED="false"
SENTRY_DSN=""
BUGSNAG_API_KEY=""